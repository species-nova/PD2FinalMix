<?xml version="1.0"?>
<tweaks>	
	<tweak version="2" name="anims/fps/fps_spawn" extension="animation_states">
		<search>
			<xml/>
			<state name="fps"/>
		</search>
		<target mode="attach">
			<to name="reload_phoenix" 						redirect="fps/reload/phoenix"/>
			<to name="reload_not_empty_phoenix" 			redirect="fps/reload_not_empty/phoenix"/>
		</target>
	</tweak>
	
	<tweak version="2" name="anims/fps/fps_spawn" extension="animation_states">
		<search>
			<xml/>
			<state name="fps/idle"/>
			<anim name="m4_idle" weight="m4"/>
		</search>
		<target mode="append">
			<anim name="phoenix_idle" weight="phoenix * (1-steelsight_weight)"/>
		</target>
	</tweak>
	
	<tweak version="2" name="anims/fps/fps_spawn" extension="animation_states">
		<search>
			<xml/>
			<state name="fps/reload"/>
		</search>
		<target mode="append">
			<state name="fps/reload/phoenix" type="once" segment="base" speed="1.0">
				<anim name="phoenix_reload"/>
				<keys>
					<key at="trigger" trigger="wp_rbull_drum_close" callback="play_sound" class_name="base" param1="wp_rbull_drum_close"/>
					<key at="trigger" trigger="wp_rbull_drum_open" callback="play_sound" class_name="base" param1="wp_rbull_drum_open"/>
					<key at="trigger" trigger="wp_rbull_shell_hit_ground" callback="play_sound" class_name="base" param1="wp_rbull_shell_hit_ground"/>
					<key at="trigger" trigger="wp_rbull_shells_in" callback="play_sound" class_name="base" param1="wp_rbull_shells_in"/>
					<key at="trigger" trigger="wp_rbull_shells_out" callback="play_sound" class_name="base" param1="wp_rbull_shells_out"/>
					<key at="trigger" trigger="wp_foley_generic_lever_release" callback="play_sound" class_name="base" param1="wp_foley_generic_lever_release"/>
					<key at="trigger" trigger="wp_foley_generic_clip_grab" callback="play_sound" class_name="base" param1="wp_foley_generic_clip_grab"/>
					<key at="trigger" trigger="wp_foley_generic_clip_throw" callback="play_sound" class_name="base" param1="wp_foley_generic_clip_throw"/>
					<key at="trigger" trigger="wp_foley_generic_clip_take_new" callback="play_sound" class_name="base" param1="wp_foley_generic_clip_take_new"/>
					<key at="trigger" trigger="wp_foley_generic_clip_in_connect" callback="play_sound" class_name="base" param1="wp_foley_generic_clip_in_connect"/>
					<key at="trigger" trigger="wp_foley_generic_lever_grab" callback="play_sound" class_name="base" param1="wp_foley_generic_lever_grab"/>
					<key at="trigger" trigger="wp_foley_generic_lever_pull" callback="play_sound" class_name="base" param1="wp_foley_generic_lever_pull"/>
					<key at="trigger" trigger="wp_foley_generic_back_in_hand" callback="play_sound" class_name="base" param1="wp_foley_generic_back_in_hand"/>
				</keys>
				<exit name="fps/idle"/>
			</state>

			<state name="fps/reload_not_empty/phoenix" type="once" segment="base" speed="1.0">
				<anim name="phoenix_reload_not_empty"/>
				<keys>
					<key at="trigger" trigger="wp_rbull_drum_close" callback="play_sound" class_name="base" param1="wp_rbull_drum_close"/>
					<key at="trigger" trigger="wp_rbull_drum_open" callback="play_sound" class_name="base" param1="wp_rbull_drum_open"/>
					<key at="trigger" trigger="wp_rbull_shell_hit_ground" callback="play_sound" class_name="base" param1="wp_rbull_shell_hit_ground"/>
					<key at="trigger" trigger="wp_rbull_shells_in" callback="play_sound" class_name="base" param1="wp_rbull_shells_in"/>
					<key at="trigger" trigger="wp_rbull_shells_out" callback="play_sound" class_name="base" param1="wp_rbull_shells_out"/>
					<key at="trigger" trigger="wp_foley_generic_lever_release" callback="play_sound" class_name="base" param1="wp_foley_generic_lever_release"/>
					<key at="trigger" trigger="wp_foley_generic_clip_grab" callback="play_sound" class_name="base" param1="wp_foley_generic_clip_grab"/>
					<key at="trigger" trigger="wp_foley_generic_clip_throw" callback="play_sound" class_name="base" param1="wp_foley_generic_clip_throw"/>
					<key at="trigger" trigger="wp_foley_generic_clip_take_new" callback="play_sound" class_name="base" param1="wp_foley_generic_clip_take_new"/>
					<key at="trigger" trigger="wp_foley_generic_clip_in_connect" callback="play_sound" class_name="base" param1="wp_foley_generic_clip_in_connect"/>
					<key at="trigger" trigger="wp_foley_generic_lever_grab" callback="play_sound" class_name="base" param1="wp_foley_generic_lever_grab"/>
					<key at="trigger" trigger="wp_foley_generic_lever_pull" callback="play_sound" class_name="base" param1="wp_foley_generic_lever_pull"/>
					<key at="trigger" trigger="wp_foley_generic_back_in_hand" callback="play_sound" class_name="base" param1="wp_foley_generic_back_in_hand"/>
				</keys>
				<exit name="fps/idle"/>
			</state>
			</target>
		</tweak>	
